{% extends 'base.html.twig' %}

{% block title %}Les Amis de la Vigne | {{ article.title }}{% endblock %}

{% block body %}

<div class="container">

    <h1 class="title p-1" style="margin: 20px 0;">{{ article.title }}</h1>

    <div class="row">
        <div class="img-fluid">
            <img width="100%" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
        </div>
    </div>

    <div class="content">
        <p class="date" style="margin-top: 40px;">Le {{ article.createdAt | date("d/m/Y") }} Ã  {{ article.createdAt | date("H:i") }} 
                                                par <span class="author">{{ article.author }}<span></p>

        <p class="content text-justify">{{ article.content | raw }}</p>

        <p>Les commentaires arriveront plus tard !</p>
    </div>

</div>

{% endblock %}